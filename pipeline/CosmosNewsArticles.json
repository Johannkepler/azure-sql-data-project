{
	"name": "CosmosNewsArticles",
	"properties": {
		"activities": [
			{
				"name": "Pull Data From News Function",
				"type": "AzureFunctionActivity",
				"dependsOn": [],
				"policy": {
					"timeout": "0.00:00:30",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"functionName": "NewsArticleManual",
					"method": "GET"
				},
				"linkedServiceName": {
					"referenceName": "NewsFunction",
					"type": "LinkedServiceReference"
				}
			},
			{
				"name": "Load Data from Cosmos",
				"description": "Loads the newly loaded data from Cosmos.",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "Pull Data From News Function",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "CosmosDbSqlApiSource",
						"query": "SELECT * FROM C",
						"preferredRegions": [],
						"pageSize": 1000,
						"detectDatetime": true
					},
					"sink": {
						"type": "CosmosDbSqlApiSink",
						"writeBehavior": "upsert",
						"disableMetricsCollection": false
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "CosmosDbSqlApiCollection1",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "CosmosDbSqlApiCollection1",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "CleanupArticles",
				"type": "ExecuteDataFlow",
				"dependsOn": [
					{
						"activity": "Load Data from Cosmos",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataflow": {
						"referenceName": "CleanupArticles",
						"type": "DataFlowReference"
					},
					"compute": {
						"coreCount": 8,
						"computeType": "General"
					}
				}
			},
			{
				"name": "Export Back To Cosmos",
				"type": "Copy",
				"dependsOn": [
					{
						"activity": "CleanupArticles",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "CosmosDbSqlApiSource",
						"preferredRegions": []
					},
					"sink": {
						"type": "CosmosDbSqlApiSink",
						"writeBehavior": "upsert",
						"disableMetricsCollection": false
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['article_id']"
								},
								"sink": {
									"path": "$['article_id']"
								}
							},
							{
								"source": {
									"path": "$['description']"
								},
								"sink": {
									"path": "$['description']"
								}
							},
							{
								"source": {
									"path": "$['guid']"
								},
								"sink": {
									"path": "$['guid']"
								}
							},
							{
								"source": {
									"path": "$['link']"
								},
								"sink": {
									"path": "$['link']"
								}
							},
							{
								"source": {
									"path": "$['pubDate']"
								},
								"sink": {
									"path": "$['pubDate']"
								}
							},
							{
								"source": {
									"path": "$['source']"
								},
								"sink": {
									"path": "$['source']"
								}
							},
							{
								"source": {
									"path": "$['sponsored']"
								},
								"sink": {
									"path": "$['sponsored']"
								}
							},
							{
								"source": {
									"path": "$['title']"
								},
								"sink": {
									"path": "$['title']"
								}
							},
							{
								"source": {
									"path": "$['type']"
								},
								"sink": {
									"path": "$['type']"
								}
							},
							{
								"source": {
									"path": "$['id']"
								},
								"sink": {
									"path": "$['id']"
								}
							},
							{
								"source": {
									"path": "$['_rid']"
								},
								"sink": {
									"path": "$['_rid']"
								}
							},
							{
								"source": {
									"path": "$['_self']"
								},
								"sink": {
									"path": "$['_self']"
								}
							},
							{
								"source": {
									"path": "$['_etag']"
								},
								"sink": {
									"path": "$['_etag']"
								}
							},
							{
								"source": {
									"path": "$['_attachments']"
								},
								"sink": {
									"path": "$['_attachments']"
								}
							},
							{
								"source": {
									"path": "$['_ts']"
								},
								"sink": {
									"path": "$['_ts']"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "CosmosDbSqlApiCollection1",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "CosmosDbSqlApiCollection1",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}